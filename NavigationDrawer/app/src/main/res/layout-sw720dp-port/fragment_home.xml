    android:orientation="vertical"
    android:background="#e6f7ff"
    tools:context="info.androidhive.navigationdrawer.fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_category_layout"
        android:background="#008bcc"
        android:layout_marginTop="1200dp"
        android:focusableInTouchMode="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#e6e7e8"
            android:layout_marginTop="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/horizontal_recycler_view"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:background="#e6f7ff"
                android:layout_width="match_parent"
                android:layout_height="228dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <ImageSwitcher
            android:id="@+id/below_img"
            android:layout_width="100dp"
            android:layout_height="match_parent" />

    </LinearLayout>


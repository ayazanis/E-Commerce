<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="info.androidhive.navigationdrawer.fragment.Edit_password">

    <!-- TODO: Update blank fragment layout -->
    <include
        android:id="@+id/toolbar_3"
        layout="@layout/toolbar_3">

    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="20dp"

        android:paddingBottom="20dp">
        <EditText
            android:id="@+id/edit_pswd_old"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginLeft="15dp"
            android:singleLine="true"
            android:hint="Old Password"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="260dp"
            android:layout_height="13dp"
            android:layout_marginTop="-5dp"
            android:background="@drawable/et_bg" />

        <EditText
            android:id="@+id/edit_pswd_new"
            android:layout_width="230dp"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            android:hint="New Password"
            android:layout_marginLeft="15dp"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:layout_marginTop="20dp"
            android:singleLine="true"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="260dp"
            android:layout_height="13dp"
            android:layout_marginTop="-5dp"
            android:background="@drawable/et_bg" />

        <EditText
            android:id="@+id/edit_pswd_cnfrm"
            android:layout_width="230dp"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:hint="Confirm Password"
            android:singleLine="true"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:layout_marginTop="20dp"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="260dp"
            android:layout_height="13dp"
            android:layout_marginTop="-5dp"
            android:background="@drawable/et_bg" />
      </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/edit_pswd_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAllCaps="false"/>
    </LinearLayout>
    </LinearLayout>
